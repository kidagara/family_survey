<% content_for :title, "Edit #{@user.name}" %>
<h1><%= "Edit #{@user.name}" %></h1>

<%= form_for @user do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <div class="row">
    <%= f.submit class: 'button radius expand' %>
  </div>
<% end %>
