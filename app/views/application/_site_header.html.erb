<header class="site-header">
  <nav class="tab-bar">
    <% if current_user && current_user.has_role?(:admin) %>
      <section class="left-small">
        <%= link_to content_tag(:span), nil, class: 'left-off-canvas-toggle menu-icon' %>
      </section>
    <% end %>
    <section class="middle tab-bar-section">
      <h1><%= link_to image_tag('nav_logo.svg', alt: 'Wavetronix'), root_path, class: 'top-bar-site-icon' %></h1>
    </section>
  </nav>

  <%= render "flash" %>

  <% if current_user && current_user.has_role?(:admin) %>
    <aside class="left-off-canvas-menu">
      <ul class="off-canvas-list">
        <li><label>Wavetronix Family Survey</label></li>
          <li>
            <%= link_to nil do %>
              Reports
            <% end %>
          </li>
          <li>
            <%= link_to nil do %>
              Families
            <% end %>
          </li>
        <li class="hide-for-medium-up">
          <%= link_to sign_out_path do %>
            Sign out
          <% end %>
        </li>
      </ul>
    </aside>
  <% end %>
</header>
